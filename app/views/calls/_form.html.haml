= simple_form_for(@call) do |f|
  - if @call.errors.any?
    #error_explanation
      %h2
        = pluralize(@call.errors.count, "error")
        prohibited this call from being saved:

      %ul
        - @call.errors.full_messages.each do |msg|
          %li= msg

  .inputs
    = f.input :cause
    = f.input :source
    = f.input :status

  .actions
    = f.button :submit
